# Application Configuration
# Port on which the application will run
APP_PORT=3001

# Application environment (development | test | production)
APP_ENV=development

# Database Configuration
# PostgreSQL database host
DB_HOST=127.0.0.1

# PostgreSQL database user
DB_USER=postgres

# PostgreSQL database password
DB_PASS=postgres

# PostgreSQL database name for main application
DB_DATABASE=ddd

# PostgreSQL database name for testing
DB_DATABASE_TEST=ddd_test

# PostgreSQL database port
DB_PORT=5432

# Alternative: Full database connection URL (used by drizzle-kit)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ddd

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USE_PASSWORD=no
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Development Configuration
# Set to any value to disable colored console output
# NO_COLOR=

# Build Configuration (used by Rspack)
# NODE_ENV=development
